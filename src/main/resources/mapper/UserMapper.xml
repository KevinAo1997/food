<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aokai.parking.dao.UserMapper">
  <resultMap id="BaseResultMap" type="com.aokai.parking.po.User">
    <!--
      WARNING - @mbg.generated
    -->
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="code" jdbcType="VARCHAR" property="code" />
    <result column="username" jdbcType="VARCHAR" property="username" />
    <result column="password" jdbcType="VARCHAR" property="password" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="sex" jdbcType="VARCHAR" property="sex" />
    <result column="email" jdbcType="VARCHAR" property="email" />
    <result column="phone" jdbcType="VARCHAR" property="phone" />
    <result column="headImg" jdbcType="VARCHAR" property="headimg" />
    <result column="description" jdbcType="VARCHAR" property="description" />
    <result column="status" jdbcType="INTEGER" property="status" />
    <result column="type" jdbcType="VARCHAR" property="type" />
  </resultMap>
  <update id="updateType">
    update user set type = #{userType} where id = #{userId}
  </update>

  <update id="updateStatus">
    update user set status = #{status} where id = #{userId}
  </update>

  <update id="updatePassword">
    update user set password = #{newPassword} where id = #{userID}
  </update>

  <delete id="deleteUser">
    delete from user where id = #{userID}
  </delete>

  <select id="checkUser" resultType="com.aokai.parking.po.User">
    select * from user where username = #{username} and password = #{password}
  </select>

  <select id="checkUserName" resultType="com.aokai.parking.po.User">
    select * from user where username = #{username}
  </select>

  <select id="checkPassword" resultType="java.lang.String">
    select password from user where id = #{userID}
  </select>

  <select id="selectUserByUserIds" resultType="com.aokai.parking.po.User">
    select * from user where id in
    <foreach collection="list" item="userIds" open="(" close=")" separator=",">
    #{userIds}
  </foreach>
  </select>
  <select id="searchUser" resultType="com.aokai.parking.po.User">
    select * from user
    <where>
      <if test="username !=null">
        and username = #{userName}
      </if>
      <if test="code != null">
        and code= #{code}
      </if>
      <if test="name != null">
        and name = #{name}
      </if>
    </where>
  </select>
</mapper>
