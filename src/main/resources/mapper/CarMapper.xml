<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aokai.parking.dao.CarMapper">
  <resultMap id="BaseResultMap" type="com.aokai.parking.po.Car">
    <!--
      WARNING - @mbg.generated
    -->
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="car_name" jdbcType="VARCHAR" property="carName" />
    <result column="car_location" jdbcType="VARCHAR" property="carLocation" />
    <result column="car_status" jdbcType="INTEGER" property="carStatus" />
    <result column="car_type" jdbcType="VARCHAR" property="carType" />
    <result column="car_price" jdbcType="DOUBLE" property="carPrice" />
    <result column="car_price_time" jdbcType="DOUBLE" property="carPriceTime" />
    <result column="garage_id" jdbcType="INTEGER" property="garageId" />
  </resultMap>
  <update id="updateStatus">
    update car set car_status = 0 where id = #{carId}
  </update>

  <delete id="deleteCar">
    delete from car where id = #{carId}
  </delete>

  <delete id="deleteCarByGarageId">
    delete from car where garage_id = #{garageId}
  </delete>

  <select id="getCarList" resultType="com.aokai.parking.po.Car">
    select id, car_name AS carName, car_location AS carLocation, car_status AS carStatus, car_type AS carType ,car_price AS carPrice , car_price_time AS carPriceTime , garage_id AS garageId from car where garage_id = #{garageId}
  </select>

  <select id="checkCarName" resultType="com.aokai.parking.po.Car">
    select * from car where car_name = #{carName} and garage_id = #{garageId}
  </select>

  <select id="checkCarStatus" resultType="java.lang.Boolean">
    select car_status from car where id = #{carId}
  </select>

  <select id="selectTotal" resultType="java.lang.Integer">
    select count(*) from car
  </select>

  <select id="selectUsingCarTotal" resultType="java.lang.Integer">
    select count(*) from car where car_status = 0
  </select>
</mapper>
